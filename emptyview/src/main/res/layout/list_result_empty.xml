<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ry_list_empty"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/iv_ico"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:src="@drawable/common_empty_icon"
            />

        <TextView
            android:id="@+id/coupon_mine_nodata_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_ico"
            android:lineSpacingExtra="5dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color666"
            android:text="这里什么都没有\n看看别的"
            android:textSize="16sp" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/coupon_mine_nodata_lab"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_btn_circle_white"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text=" 更多信息 "
            android:textColor="@color/product_color"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"

            />

    </RelativeLayout>
</RelativeLayout>